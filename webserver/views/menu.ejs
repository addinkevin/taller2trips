<!DOCTYPE html>
<html lang="en">
<head>
    <title>Trip Web System</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="stylesheets/style-menu.css">
    <link rel="stylesheet" type="text/css" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="bower_components/font-awesome/css/font-awesome.min.css">
    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="bower_components/angular/angular.min.js"></script>
    <script type="text/javascript" src="bower_components/angular-route/angular-route.js"></script>

    <script type="text/javascript" src="app/tripsApp.js"></script>
    <script type="text/javascript" src="app/controllers.js"></script>
    <script type="text/javascript" src="app/ciudades/module.js"></script>
    <script type="text/javascript" src="app/ciudades/controllers.js"></script>
</head>
<body>

<!-- Wrap all page content here -->
<div id="wrap" ng-app="tripsApp" ng-controller="tripsAppController">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li ng-class="{active:activeMenu === menuItem}" ng-repeat="menuItem in menuItems">
                        <a ng-click="setActive(menuItem)" href="{{menuItem.url}}">{{menuItem.description}}</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">
            </div>

            <div class="col-sm-8 text-left">
                <div ng-view>
                </div>
            </div>

            <div class="col-sm-2 text-left">
            </div>
        </div>
    </div>
</div><!-- Wrap Div end -->

<div id="footer">
    <div class="container">
    </div>
</div>

</body>
</html>