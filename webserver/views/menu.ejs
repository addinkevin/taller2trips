<!DOCTYPE html>
<html lang="en">
<head>
    <title>Trip Web System</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="stylesheets/style-menu.css">
    <link rel="stylesheet" type="text/css" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="bower_components/font-awesome/css/font-awesome.min.css">
    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBfgdw0Y5DIuWpWLF-6vEDORKEh3YgxuCo&libraries=places"></script>

    <script type="text/javascript" src="bower_components/angular/angular.min.js"></script>
    <script type="text/javascript" src="bower_components/angular-route/angular-route.js"></script>

    <script type="text/javascript" src="app/tripsApp.js"></script>
    <script type="text/javascript" src="app/controllers.js"></script>
    <script type="text/javascript" src="app/ciudades/module.js"></script>
    <script type="text/javascript" src="app/ciudades/controllers.js"></script>
    <script type="text/javascript" src="app/atracciones/module.js"></script>
    <script type="text/javascript" src="app/atracciones/controllers.js"></script>
</head>
<body ng-app="tripsApp" ng-controller="tripsAppController">

<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Trips</a>
        </div>

        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li ng-class="{active: isActive(menuItem)}" ng-repeat="menuItem in menuItems">
                    <a ng-click="setActive(menuItem)" href="{{menuItem.url}}">{{menuItem.description}}</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<!-- Begin page content -->
<div class="container">
    <div ng-view></div>
</div>

<footer class="footer">
    <div class="container">
        <p class="text-muted">Trips web System</p>
    </div>
</footer>

</body>
</html>